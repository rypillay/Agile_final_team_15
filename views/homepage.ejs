<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CS Student Hub</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Font Awesome icons-->
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
    <!-- Google fonts-->
    <link
      href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"
      rel="stylesheet"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/homepage.css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
      <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="/">CS Students Hub</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarResponsive"
          aria-controls="navbarResponsive"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          Menu
          <i class="fas fa-bars"></i>
        </button>
        <form action="/search" method="POST" class="d-flex me-4">
          <input
            type="text"
            name="searchQuery"
            class="form-control"
            placeholder="Search for articles"
          />
          <button type="submit" class="btn btn-outline-success">Search</button>
        </form>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ms-auto py-4 py-lg-0">
            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/reader/articles"
                >Resources</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/reader/articles"
                >Tools</a
              >
            </li>

            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/reader/articles"
                >Community</a
              >
            </li>

            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/reader/articles"
                >Careers</a
              >
              <!-- Add button or icon for the profile -->
            </li>

            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/reader/articles"
                >Profile</a
              >
            </li>

            <li class="nav-item">
              <button id="logoutButton" class="btn btn-primary">Logout</button>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Slider section -->
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% for (let i = 1; i <= nbOfSlides; i++) { %>
        <div class="carousel-item <%= i === 1 ? 'active' : '' %>">
          <img
            src="/assets/img/image<%= i %>.jpg"
            class="d-block w-100"
            alt="Slide <%= i %>"
          />
          <div class="carousel-caption d-none d-md-block">
            <h2>
              <% if (i === 1) { %> Need a job or career advice? <% } else if (i
              === 2) { %> Join our fast-growing community! <% } else if (i ===
              3) { %> Check out our resources <% } %>
            </h2>
          </div>
        </div>
        <% } %>
      </div>
      <!-- Changes slides -->
      <div class="control">
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExample"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExample"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>

    <div class="container">
      <!-- Latest News Section -->
      <div class="latest-news-section">
        <h3>Latest News</h3>
        <div class="card-deck">
          <!-- Card 1 -->
          <div class="card">
            <img
              src="/assets/img/collaboration.jpg"
              class="card-img-top"
              alt="News 1"
            />
            <div class="card-body">
              <h5 class="card-title">Breaking News</h5>
              <p class="card-text">Short summary of breaking news article.</p>
              <a href="#" class="btn btn-primary read-more">Read More</a>
            </div>
          </div>

          <!-- Card 2 -->
          <div class="card">
            <img
              src="/assets/img/computer.jpg"
              class="card-img-top"
              alt="News 2"
            />
            <div class="card-body">
              <h5 class="card-title">Technology Update</h5>
              <p class="card-text">Summary of the latest technology trends.</p>
              <a href="#" class="btn btn-primary read-more">Read More</a>
            </div>
          </div>

          <!-- Card 3 -->
          <div class="card">
            <img
              src="/assets/img/home-bg.jpg"
              class="card-img-top"
              alt="News 3"
            />
            <div class="card-body">
              <h5 class="card-title">Sports Highlights</h5>
              <p class="card-text">
                Recap of recent sports events and highlights.
              </p>
              <a href="#" class="btn btn-primary read-more">Read More</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Best Study Tools Section -->
      <div class="best-study-tools-section">
        <h3>Best Study Tools (Based on Leading Research)</h3>
        <div class="card-deck">
          <!-- Card 1 - Key cards "Quick test" -->
          <div class="card">
            <img
              src="/assets/img/keycards.jpg"
              class="card-img-top"
              alt="Quick Test"
            />
            <div class="card-body">
              <h5 class="card-title">Key cards "Quick test"</h5>
              <button class="btn btn-primary read-more">GO</button>
            </div>
          </div>

          <!-- Card 2 - Pomodoro timer -->
          <div class="card">
            <img
              src="/assets/img/Pomodoro.jpg"
              class="card-img-top"
              alt="Pomodoro Timer"
            />
            <div class="card-body text-center">
              <h5 class="card-title">Pomodoro Timer</h5>
              <button class="btn btn-success">Start</button>
            </div>
          </div>

          <!-- Card 3 - Coding challenges -->
          <div class="card">
            <img
              src="/assets/img/codingchallenge.jpg"
              class="card-img-top"
              alt="Coding Challenges"
            />
            <div class="card-body">
              <h5 class="card-title">Coding Challenges</h5>
              <button class="btn btn-warning read-more">Start</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer-->
    <footer class="border-top">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <ul class="list-inline text-center">
              <li class="list-inline-item">
                <a href="https://www.twitter.com">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="https://www.facebook.com">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="https://www.github.com">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
            </ul>
            <div class="small text-center text-muted fst-italic">
              Copyright &copy; CS Students Hub
            </div>
          </div>
        </div>
      </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Include the author-home.js file -->
    <script src="/js/author-home.js"></script>
    <script src="/js/scripts.js"></script>
  </body>
</html>
