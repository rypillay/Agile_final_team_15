<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resources</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon_white.ico" />
    <!-- Font Awesome icons-->
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
    <!-- Google fonts-->
    <link
      href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"
      rel="stylesheet"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/resources.css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/styles.css" rel="stylesheet" />
    <!-- Colorblind Script -->
    <script defer src="js/colorblind.js"></script>
    <!-- Night Mode Script -->
    <script defer src="js/night-mode.js"></script>
  </head>
  <body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
      <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="/">
          <div class="nav-logo-div">
            <img src="/assets/img/logo1_white.png" class="nav-logo" />
          </div>
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarResponsive"
          aria-controls="navbarResponsive"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          Menu
          <i class="fas fa-bars"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <!-- Change ms-auto to me-auto -->
            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/resources"
                >Resources</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/tools">Tools</a>
            </li>
            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/community"
                >Community</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="/careers"
                >Careers</a
              >
            </li>
          </ul>
          <form action="/search" method="POST" class="d-flex me-lg-4">
            <input
              type="text"
              name="searchQuery"
              class="form-control searchbar"
              placeholder="Search for articles"
            />
            <button type="submit" class="btn search">
              <i class="fa-solid fa-magnifying-glass fa-lg"></i>
            </button>
          </form>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <!-- Change User Profile Icon, dependant if user is logged in or not -->
              <% if (userLoggedIn === false) { %>
              <li class="nav-item">
                <a
                  class="nav-link user-profile px-lg-3 py-3 py-lg-4"
                  href="/login"
                >
                  <i class="fa-solid fa-user-plus fa-2xl"></i>
                </a>
              </li>
              <% } %>

              <!-- Only display Logout icon if user is not logged in -->
              <% if (userLoggedIn) { %>
              <li class="nav-item">
                <button id="logoutButton" class="btn logout">
                  <i
                    class="fa-solid fa-right-from-bracket fa-2xl text-light"
                  ></i>
                </button>
              </li>
              <% } %>
              <li>
                <button id="colorblindToggle" class="btn mode-toggle">
                  <i class="fa-brands fa-accessible-icon fa-2xl text-light"></i>
                </button>
              </li>
              <li>
                <button id="nightModeToggle" class="btn mode-toggle">
                  <i class="fas fa-sun fa-2xl text-light"></i>
                </button>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <div class="container" id="content">
      <!-- Latest Articles Section -->
      <div class="latest-articles-section page-section">
        <div class="latest-section">
          <div class="section-title-banner">
            <h3>Latest Articles</h3>
            <% if (latestArticlesGoogle && latestArticlesGoogle.length > 0) { %>
            <div class="card-deck">
              <% latestArticlesGoogle.forEach(article => { %>
              <div class="card">
                <div class="card-body text-center">
                  <h5 class="card-title"><%= article.title %></h5>
                  <% if (article.imageUrl) { %>
                  <img
                    src="<%= article.imageUrl %>"
                    class="card-img-top"
                    alt="Article Image"
                  />
                  <% } %>
                  <a href="<%= article.link %>" class="btn read-more"
                    >Read More</a
                  >
                </div>
              </div>
              <% }) %>
            </div>
            <a href="/reader/articles" class="btn explore-all"
              >Explore All Articles</a
            >
            <% } else { %>
            <p>No articles found.</p>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Latest Tutorials Section -->
      <div class="latest-tutorials-section page-section">
        <div class="latest-section">
          <div class="section-title-banner">
            <h3>Latest Tutorials</h3>
            <% if (latestTutorials && latestTutorials.length > 0) { %>
            <div class="card-deck">
              <% latestTutorials.forEach(tutorial => { %>
              <div class="card">
                <div class="card-body text-center">
                  <h5 class="card-title"><%= tutorial.title %></h5>
                  <p class="card-text"><%= tutorial.description %></p>
                  <img
                    src="<%= tutorial.thumbnail %>"
                    class="card-img-top"
                    alt="Tutorial Thumbnail"
                  />
                  <a
                    href="https://www.youtube.com/watch?v=<%= tutorial.videoId %>"
                    class="btn read-more"
                    >Watch Tutorial</a
                  >
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
        <a href="/resources/tutorials" class="btn explore-all"
          >Explore All Tutorials</a
        >
        <% } else { %>
        <p>No tutorials found.</p>
        <% } %>
      </div>

      <!-- Latest Recommended Books Section -->
      <!-- Reduces recommended books description  -->
      <% function truncateText(text, maxWords) { const words = text.split(' ');
      if (words.length > maxWords) { return words.slice(0, maxWords).join(' ') +
      '...'; } else { return text; } } %>
      <!-- Latest Recommended Books Section -->
      <div class="latest-recommended-books-section page-section">
        <div class="latest-section">
          <div class="section-title-banner">
            <h3>Latest Recommended Books</h3>
            <% if (latestBooks && latestBooks.length > 0) { %>
            <div class="card-deck">
              <% latestBooks.forEach(book => { %>
              <div class="card">
                <div class="card-body text-center">
                  <!-- Adding a hyperlink to the book page with dynamic URL -->
                  <h5 class="card-title">
                    <a href="/book/<%= book.book_id %>"><%= book.title %></a>
                  </h5>
                  <% if (book.authors) { %>
                  <p class="card-text">Author(s): <%= book.authors %></p>
                  <% } %>
                  <!-- Using the truncateText function for book description -->
                  <p class="card-text">
                    <%= truncateText(book.description, 50) %>
                    <!-- Adjust the word count as needed -->
                  </p>
                  <% if (book.publication_date) { %>
                  <p class="card-text">
                    Published on <%= book.publication_date %>
                  </p>
                  <% } %> <% if (book.imageUrl) { %>
                  <img
                    src="<%= book.imageUrl %>"
                    class="card-img-top"
                    alt="Book Image"
                  />
                  <% } %>
                  <!-- Modify the hyperlink to dynamically construct the Google Books URL -->
                  <a
                    href="<%= `https://books.google.be/books?id=${book.bookId}&hl=&source=gbs_api` %>"
                    class="btn read-more"
                    >Read More</a
                  >
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
        <a href="/resources/recommended-books" class="btn explore-all"
          >Explore All Books</a
        >
        <% } else { %>
        <p>No books found.</p>
        <% } %>
      </div>
    </div>
    <!-- Footer-->
    <footer class="border-top">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <ul class="list-inline text-center">
              <li class="list-inline-item">
                <a href="https://www.twitter.com">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="https://www.facebook.com">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="https://www.github.com">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
            </ul>
            <div class="small text-center text-muted fst-italic">
              Copyright &copy; CS Students Hub
            </div>
          </div>
        </div>
      </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Include the author-home.js file -->
    <script src="/js/resources.js"></script>
    <script src="/js/scripts.js"></script>
  </body>
</html>
